/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
 /*
 *Xor(a, b) = And(Nand(a, b), Or(a, b))
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
        Nand(a=a , b=b , out=nand );
        Or(a=a , b=b , out=or );
        And(a=nand , b=or , out=out );    
}